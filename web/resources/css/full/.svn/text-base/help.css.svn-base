#help {
    overflow: scroll;
    width: 100%;
    height: 100%;
}

#help .sources {
    margin: auto;
    width: 500px;
}

#help .image {
    text-align: center;
    clear: both;
}

#help img {
    margin: 5px;
    clear: both;
    margin: 0 auto;
    text-align: center;
}

#help p {
    text-align: left;
}

/** clearfixes **/
.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.clearfix {
    display: inline-block;
}

/* Hides from IE-mac \*/
* html .clearfix {
    height: 1%;
}

.clearfix {
    display: block;
}

/*printer styles*/ 
@media print{ 
    /*hide the left column when printing*/
    #sidebar{display:none;}
    #container{width:100%; float:none;}
}